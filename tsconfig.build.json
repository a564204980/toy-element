{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "types": [
            "node"
        ],
        "baseUrl": "./",
        "paths": {
            "@toy-element/components": [
                "./packages/components"
            ]
        },
        /* 性能优化，添加排除规则，避免不必要的文件处理，缩短ts类型检测时间 */
        /* incremental:使编译器仅重新编译变更的文件及其依赖项 */
        "incremental": true,
        /* tsBuildInfoFile:用于记录编译信息以避免重复计算，显著加快大型项目构建速度 */
        "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo"
    },
    /* Bundler mode */
    "include": [
        "packages/core/index.ts",
        "packages/hooks/**/*.ts",
        "packages/utils/**/*.ts",
        "packages/components/**/*.ts",
        "env.d.ts"
    ],
    "exclude": [
        "packages/components/vitest.config.ts",
    ]
}